inline void MPM_PARTICLE::SetMohrCoulomb(double young, double poisson, double phi, double psi, double c)
{
	MID = 2;
	double mu = 0.5*young/(1.+poisson);
	double la = young*poisson/(1.+poisson)/(1.-2.*poisson);
	MParas[0] = mu;
	MParas[1] = la;
	MParas[2] = phi;
	MParas[3] = psi;
	MParas[4] = c;
}